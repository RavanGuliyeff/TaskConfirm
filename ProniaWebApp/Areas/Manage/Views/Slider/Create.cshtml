@model CreateSliderVm

<div class="container">

	<form method="post" enctype="multipart/form-data">

		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label asp-for="UpTitle">UpTitle</label>
					<input asp-for="UpTitle" class="form-control" placeholder="Enter UpTitle:">
					<span asp-validation-for="UpTitle" style="color:red"></span>
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group">
					<label asp-for="DownTitle">DownTitle</label>
					<input asp-for="DownTitle" class="form-control" placeholder="Enter DownTitle:">
					<span asp-validation-for="DownTitle" style="color:red"></span>
				</div>
			</div>

			<div class="col-md-4">
				<div class="form-group">
					<label asp-for="Image">Image</label>
					<input asp-for="Image" class="form-control">
					<span asp-validation-for="Image" style="color:red"></span>
				</div>
			</div>

		</div>
		<div class="form-group">
			<label asp-for="Description">Description</label>
			<textarea asp-for="Description" class="form-control" rows="3"></textarea>
			<span asp-validation-for="Description" style="color:red"></span>
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>

	</form>

</div>